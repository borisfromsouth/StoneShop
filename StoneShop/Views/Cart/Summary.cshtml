@using StoneShop_Utility
@model StoneShop_Models.ViewModels.ProductUserVM

<form method="post" id="payment-form">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container" style="margin: auto">
                    <div class="col-10">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Order Summary
                    </div>
                    <div class="col-2" align="right">@*text-right*@
                        <a asp-action="Index" class="btn btn-outline-info btn-sm">Back to Cart</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Customer Details:</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Name</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="User.FullName" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Phone</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="User.PhoneNumber" required type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="User.Email" required type="text" class="form-control" />
                                    </div>
                                </div>
                                @if (User.IsInRole(WebConstants.AdminRole))
                                {
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Street</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="User.Street" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>City</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="User.City" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>State</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="User.State" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>PostCode</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="User.PostCode" type="text" class="form-control" />
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="col-12 col-lg-5 row">
                                <div class="col-12">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Order Summary:</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @{
                                            var totalOrder = 0.0;
                                        }
                                        @for (int i = 0; i < Model.ProductList.Count(); i++)@*@foreach (var obj in Model.ProductList)*@
                                        {
                                            <input type="hidden" asp-for="@Model.ProductList[i].Id"/>
                                            <input type="hidden" asp-for="@Model.ProductList[i].Name"/>
                                            <input type="hidden" asp-for="@Model.ProductList[i].Price"/>
                                            <input type="hidden" asp-for="@Model.ProductList[i].TempSqFt"/>
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@Model.ProductList[i].Name</h6>
                                                    @if (User.IsInRole(WebConstants.AdminRole))
                                                    {
                                                        <small class="text-muted">Sqft: @Model.ProductList[i].TempSqFt</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">Price per Sqft: $@Model.ProductList[i].Price</small>
                                                    }
                                                </div>
                                                @if (User.IsInRole(WebConstants.AdminRole))
                                                {
                                                    <span class="text-muted">$@(Model.ProductList[i].Price*Model.ProductList[i].TempSqFt)</span>
                                                }
                                               @* <div class="col-6 text-center">
                                                    <img src="@WebConstants.ImagePath@Model.ProductList[i].Image" class="rounded" width="100%" />
                                                </div>*@
                                            </li>
                                            totalOrder += Model.ProductList[i].Price * Model.ProductList[i].TempSqFt;
                                        }
                                        @if (User.IsInRole(WebConstants.AdminRole))
                                        {
                                            <li class="list-group-item d-flex justify-content-between bg-light">
                                                 <small class="text-info">TOTAL (USD)</small>
                                                 <strong class="text-info">$@totalOrder</strong>
                                            </li>
                                        }
                                    </ul>
                                </div>
                                @if (User.IsInRole(WebConstants.AdminRole))
                                {
                                    <div class="col-12">
                                        <div class="container">
                                            <div id="dropin-container"></div>
                                            <input id="nonce" name="payment_method_nonce" type="hidden" />
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-5 offset-md-7">
                            @if (User.IsInRole(WebConstants.AdminRole))
                            {
                                <button class="btn btn-success form-control" onclick="return validateInput()" id="submit-button">Submit Order</button>
                            }
                            else
                            {
                                <button type="submit" onclick="return validateInput()" class="btn btn-primary form-control">Submit Inquiry</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://js.braintreegateway.com/web/dropin/1.33.7/js/dropin.min.js"></script>  @* открытие окна ввода данных карточки *@

    <script>
        var client_token = "@ViewBag.ClientToken";
        var form = document.querySelector('#payment-form');

        braintree.dropin.create({
            authorization: client_token,
            container: '#dropin-container'
        }, function (createErr, instance) {
                form.addEventListener('submit', function () {
                event.preventDefault(); // приостановка стандартного поведения передачи данных из формы
                // add the nonce to the form and submit
                instance.requestPaymentMethod(function (err, payload) {
                // Передаем payload.nonce на сервер
                document.querySelector('#nonce').value = payload.nonce;
                form.submit();
                });
            });
        });

        function validateInput() {  // основная причина - валидация полей при правильном введении карточки
            var app_name = document.getElementById("User_FullName").value;
            var app_phone = document.getElementById("User_PhoneNumber").value;
            var app_email = document.getElementById("User_Email").value;

            if (app_name.toString() == ''){
                Swal.fire({
                  icon: 'error',
                  title: 'Error',
                  text: 'Please enter Full Name'
                })
                return false;
            }
            if (app_phone.toString() == ''){
                Swal.fire({
                  icon: 'error',
                  title: 'Error',
                  text: 'Please enter Phone Number'
                })
                return false;
            }
            if (app_email.toString() == ''){
                Swal.fire({
                  icon: 'error',
                  title: 'Error',
                  text: 'Please enter Email'
                })
                return false;
            }
            return true;
        }
    </script>
}